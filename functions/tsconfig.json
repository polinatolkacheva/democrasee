{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "baseUrl":".",
    "paths":{
      "*":["node_modules/*"]
    }
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ]
}
